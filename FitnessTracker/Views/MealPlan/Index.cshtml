@model IEnumerable<FitnessTracker.Models.MealModels.MealPlan.MealPlanListItem>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

@if (TempData.ContainsKey("SaveResult"))
{
    <div class="alert alert-success fade in" role="alert">
        @ViewBag.SaveResult
        <button type="button" class="close" data-dismiss="alert">
            <span>&times;</span>
        </button>
    </div>
}

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.MealPlanId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DateCreatedUtc)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MealPlanId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateCreatedUtc)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.MealPlanId}) |
                @Html.ActionLink("Details", "Details", new { id = item.MealPlanId }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.MealPlanId })
            </td>
        </tr>
    }

</table>
